{
  final String trace=error.getStackTrace();
  final String partialTrace=trace == null || trace.isEmpty() ? "" : trace.substring(0,Math.min(trace.length(),1000));
  LOG.error("Error from " + methodName + (filePath == null ? "" : (", file = " + filePath))+ ", SDK version = "+ mySdkVersion+ ", server version = "+ myServerVersion+ ", error code = "+ error.getCode()+ ": "+ error.getMessage()+ "\n"+ partialTrace+ "...");
}
