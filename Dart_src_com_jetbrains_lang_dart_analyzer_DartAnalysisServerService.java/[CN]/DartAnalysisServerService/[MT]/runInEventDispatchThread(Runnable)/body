{
  try {
    if (SwingUtilities.isEventDispatchThread()) {
      runnable.run();
    }
 else {
      ApplicationManager.getApplication().invokeAndWait(new Runnable(){
        public void run(){
          runnable.run();
        }
      }
,ModalityState.defaultModalityState());
    }
  }
 catch (  Exception e) {
    LOG.warn(e);
  }
}
