{
  if (projectPath == null)   throw new ExecutionException("Project directory not given");
  VirtualFile projectDir=LocalFileSystem.getInstance().findFileByPath(projectPath);
  while (projectDir != null) {
    if (projectDir.isDirectory() && projectDir.findChild("pubspec.yaml") != null) {
      return projectDir;
    }
    projectDir=projectDir.getParent();
  }
  throw new ExecutionException("Project directory not given");
}
