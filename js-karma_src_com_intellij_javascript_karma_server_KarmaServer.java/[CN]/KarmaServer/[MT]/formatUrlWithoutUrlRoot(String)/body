{
  if (!path.startsWith("/")) {
    path="/" + path;
  }
  KarmaConfig config=myState.getKarmaConfig();
  if (config != null) {
    return "http://" + config.getHostname() + ":"+ getServerPort()+ path;
  }
  LOG.error("Karma config isn't ready yet.");
  return "http://localhost:" + getServerPort() + path;
}
