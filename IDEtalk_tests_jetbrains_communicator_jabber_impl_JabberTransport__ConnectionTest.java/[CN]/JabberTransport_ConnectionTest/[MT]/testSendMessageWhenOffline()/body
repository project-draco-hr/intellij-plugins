{
  myFacade.disconnect();
  addEventListener();
  mySelf.sendMessage("message",getBroadcaster());
  new WaitFor(TIMEOUT){
    protected boolean condition(){
      return myEvents.size() > 0;
    }
  }
;
  assertTrue("Should reestablish connection",myFacade.isConnectedAndAuthenticated());
  checkEvent(true);
}
