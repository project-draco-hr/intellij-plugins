{
  final HyperlinkListener listener=new HyperlinkAdapter(){
    protected void hyperlinkActivated(    final HyperlinkEvent e){
      RunDialog.editConfiguration(project,configuration,FlexBundle.message("edit.configuration.title"));
    }
  }
;
  ToolWindowManager.getInstance(project).notifyByBalloon(isDebug ? ToolWindowId.DEBUG : ToolWindowId.RUN,MessageType.WARNING,FlexBundle.message("run.when.compile.before.run.turned.off"),null,listener);
}
