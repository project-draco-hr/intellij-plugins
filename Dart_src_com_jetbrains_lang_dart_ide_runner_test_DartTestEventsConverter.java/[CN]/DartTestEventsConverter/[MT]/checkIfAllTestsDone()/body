{
  if (!areAllTestsDone()) {
    if (myTestsDoneTimer == null) {
      myTestsDoneTimer=new Thread("test finisher"){
        public void run(){
synchronized (myLock) {
            processAllTestsDone();
          }
        }
      }
;
      myTestsDoneTimer.start();
      Thread.yield();
    }
  }
 else {
    myTestsDoneTimer=null;
    processAllTestsDone();
  }
}
