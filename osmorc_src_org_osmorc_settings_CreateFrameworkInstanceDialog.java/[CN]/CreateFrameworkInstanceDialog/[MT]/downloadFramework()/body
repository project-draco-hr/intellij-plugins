{
  PaxFrameworkDownloader paxFrameworkDownloader=new PaxFrameworkDownloader(getIntegratorName().toLowerCase(),getVersion(),myTargetFolder.getText().trim(),"",myClearFolderBeforeDownloadCheckBox.isSelected(),new PaxFrameworkDownloader.DownloaderCallback(){
    @Override public void downloadFinished(    boolean successful,    @Nullable final String errorMessage){
      if (!successful) {
        UIUtil.invokeLaterIfNeeded(new Runnable(){
          @Override public void run(){
            ((MyErrorText)myErrorText).setError(errorMessage);
          }
        }
);
      }
 else {
        UIUtil.invokeLaterIfNeeded(new Runnable(){
          @Override public void run(){
            ((MyErrorText)myErrorText).setStatus("Download successful.");
          }
        }
);
      }
    }
  }
);
  paxFrameworkDownloader.download();
}
