{
  if (toolWindowForm == null) {
    return;
  }
  try {
    XmlFile file=toolWindowForm.getFile();
    if (file != null) {
      saveLastImage(file);
    }
  }
  finally {
    Disposer.dispose(toolWindowForm.getPreviewPanel());
    toolWindowForm=null;
    toolWindow=null;
    toolWindowVisible=false;
  }
}
