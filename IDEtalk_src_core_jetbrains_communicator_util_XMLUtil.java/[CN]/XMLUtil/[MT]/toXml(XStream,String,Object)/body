{
  Writer writer=null;
  try {
    BufferedOutputStream stream=new BufferedOutputStream(new FileOutputStream(fullFileName));
    writer=new OutputStreamWriter(stream,"UTF-8");
    xStream.toXML(object,writer);
  }
 catch (  IOException e) {
    processError(e);
  }
 finally {
    if (writer != null) {
      try {
        writer.close();
      }
 catch (      IOException e) {
        processError(e);
      }
    }
  }
}
