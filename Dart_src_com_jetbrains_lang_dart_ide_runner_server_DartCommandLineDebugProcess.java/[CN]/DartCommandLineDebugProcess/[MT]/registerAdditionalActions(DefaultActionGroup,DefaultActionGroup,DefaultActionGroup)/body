{
  topToolbar.addSeparator();
  if (myObservatoryPort > 0) {
    topToolbar.addAction(new OpenDartObservatoryUrlAction("http://" + NetUtils.getLocalHostString() + ":"+ myObservatoryPort,new Computable<Boolean>(){
      @Override public Boolean compute(){
        return myVmConnected && !getSession().isStopped();
      }
    }
));
  }
}
