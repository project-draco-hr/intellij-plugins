{
  ApplicationManager.getApplication().runWriteAction(new Runnable(){
    @Override public void run(){
      if (remove) {
        FileTypeManager.getInstance().removeAssociatedExtension(OgnlFileType.INSTANCE,OgnlFileType.INSTANCE.getDefaultExtension());
        return;
      }
      FileTypeManager.getInstance().associateExtension(OgnlFileType.INSTANCE,OgnlFileType.INSTANCE.getDefaultExtension());
    }
  }
);
}
