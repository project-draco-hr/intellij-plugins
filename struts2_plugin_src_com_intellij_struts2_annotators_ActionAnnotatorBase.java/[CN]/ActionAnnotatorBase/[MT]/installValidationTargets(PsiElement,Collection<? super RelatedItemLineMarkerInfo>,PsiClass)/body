{
  final List<XmlFile> files=ValidatorManager.getInstance(element.getProject()).findValidationFilesFor(clazz);
  if (files.isEmpty()) {
    return;
  }
  final NavigationGutterIconBuilder<PsiElement> validatorBuilder=NavigationGutterIconBuilder.create(StrutsIcons.VALIDATION_CONFIG_FILE).setTargets(files).setPopupTitle(StrutsBundle.message("annotators.action.goto.validation")).setTooltipTitle(StrutsBundle.message("annotators.action.goto.validation.tooltip"));
  lineMarkerInfos.add(validatorBuilder.createLineMarkerInfo(element));
}
