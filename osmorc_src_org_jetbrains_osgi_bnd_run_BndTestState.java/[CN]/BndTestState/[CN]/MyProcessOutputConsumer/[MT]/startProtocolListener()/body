{
  new Thread(){
    @Override public void run(){
      try {
        Socket socket=mySocket.accept();
        try {
          BufferedReader reader=new BufferedReader(new InputStreamReader(socket.getInputStream()));
          try {
            String line;
            while ((line=reader.readLine()) != null) {
              processEventLine(line);
            }
          }
  finally {
            reader.close();
          }
        }
  finally {
          socket.close();
        }
      }
 catch (      IOException e) {
        LOG.debug(e);
      }
    }
  }
.start();
}
