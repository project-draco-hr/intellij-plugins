{
  final Balloon balloon=JBPopupFactory.getInstance().createHtmlTextBalloonBuilder(message,messageType,new BrowserHyperlinkListener()).setShowCallout(false).setHideOnAction(false).createBalloon();
  ApplicationManager.getApplication().invokeLater(new Runnable(){
    @Override public void run(){
      Window window=WindowManager.getInstance().getFrame(project);
      if (window == null) {
        window=JOptionPane.getRootFrame();
      }
      if (window instanceof IdeFrameImpl) {
        ((IdeFrameImpl)window).getBalloonLayout().add(balloon);
      }
    }
  }
);
}
