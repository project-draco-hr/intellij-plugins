{
  JPanel panel=new JPanel(new GridBagLayout());
  JLabel label=new JLabel("Configuration file:");
{
    GridBagConstraints c=new GridBagConstraints(0,0,1,1,0.0,0.0,GridBagConstraints.LINE_START,GridBagConstraints.NONE,new Insets(4,0,UISettingsUtil.TEXT_LABEL_BOTTOM_SPACING,0),0,0);
    label.setDisplayedMnemonic('C');
    panel.add(label,c);
  }
{
    GridBagConstraints c=new GridBagConstraints(0,1,1,1,1.0,1.0,GridBagConstraints.FIRST_LINE_START,GridBagConstraints.HORIZONTAL,new Insets(0,0,0,0),0,0);
    myConfigFileTextFieldWithBrowseButton=new TextFieldWithBrowseButton();
    myConfigFileTextFieldWithBrowseButton.addBrowseFolderListener("Select JsTestDriver configuration file","",creationContext.getProject(),new FileChooserDescriptor(true,false,false,false,false,false));
    panel.add(myConfigFileTextFieldWithBrowseButton,c);
  }
  label.setLabelFor(myConfigFileTextFieldWithBrowseButton);
  return panel;
}
