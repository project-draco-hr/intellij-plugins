{
  ApplicationManager.getApplication().runWriteAction(new Runnable(){
    public void run(){
      try {
        root.createChildDirectory(this,"eclipse");
      }
 catch (      IOException e) {
        throw new RuntimeException(e);
      }
    }
  }
);
  expect(fileSystem.findFileByPath(instanceDefinition.getBaseFolder())).andReturn(root.findChild("eclipse"));
  replay(fileSystem);
  assertThat(testObject.checkValidity(instanceDefinition),equalTo(MessageFormat.format(EquinoxFrameworkInstanceManager.NO_PLUGINS_FOLDER,instanceDefinition.getBaseFolder())));
  verify(fileSystem);
}
