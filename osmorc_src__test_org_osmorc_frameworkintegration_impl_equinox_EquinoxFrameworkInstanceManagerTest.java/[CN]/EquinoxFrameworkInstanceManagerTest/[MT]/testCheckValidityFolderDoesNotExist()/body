{
  expect(_fileSystem.findFileByPath(_instanceDefinition.getBaseFolder())).andReturn(_root.findChild("eclipse"));
  replay(_fileSystem);
  assertThat(_testObject.checkValidity(_instanceDefinition),equalTo(MessageFormat.format(EquinoxFrameworkInstanceManager.FOLDER_DOES_NOT_EXIST,_instanceDefinition.getBaseFolder())));
  verify(_fileSystem);
}
