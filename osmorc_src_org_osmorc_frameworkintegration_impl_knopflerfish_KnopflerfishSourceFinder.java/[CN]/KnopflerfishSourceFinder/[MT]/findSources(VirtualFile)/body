{
  VirtualFile sourceFolder=folder.findChild("src");
  if (sourceFolder != null) {
    _sourceMapping.put(folder.getName(),sourceFolder);
  }
 else {
    VirtualFile[] files=folder.getChildren();
    for (    VirtualFile file : files) {
      if (file.isDirectory()) {
        findSources(file);
      }
    }
  }
}
