{
  if (!runConfiguration.isGenerateWorkingDir()) {
    if (runConfiguration.getWorkingDir() == null || "".equals(runConfiguration.getWorkingDir()) || !new File(runConfiguration.getWorkingDir()).exists()) {
      throw new RuntimeConfigurationError("The runtime directory is not specified or does not exist. Please set a runtime directory at the 'Parameters' tab or select 'Recreate each time'.");
    }
  }
  checkFrameworkSpecifics(runConfiguration);
}
