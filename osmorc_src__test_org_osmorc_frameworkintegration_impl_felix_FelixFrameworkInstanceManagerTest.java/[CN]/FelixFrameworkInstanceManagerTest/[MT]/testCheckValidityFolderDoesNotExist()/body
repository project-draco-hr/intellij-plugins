{
  expect(fileSystem.findFileByPath(instanceDefinition.getBaseFolder())).andReturn(root.findChild("felix"));
  replay(fileSystem);
  assertThat(testObject.checkValidity(instanceDefinition),equalTo(MessageFormat.format(FelixFrameworkInstanceManager.FOLDER_DOES_NOT_EXIST,instanceDefinition.getBaseFolder())));
  verify(fileSystem);
}
