{
  ApplicationManager.getApplication().runWriteAction(new Runnable(){
    public void run(){
      try {
        root.createChildDirectory(this,"felix").createChildDirectory(this,"bin");
      }
 catch (      IOException e) {
        throw new RuntimeException(e);
      }
    }
  }
);
  expect(fileSystem.findFileByPath(instanceDefinition.getBaseFolder())).andReturn(root.findChild("felix"));
  replay(fileSystem);
  assertThat(testObject.checkValidity(instanceDefinition),equalTo(MessageFormat.format(FelixFrameworkInstanceManager.NO_BUNDLE_FOLDER,instanceDefinition.getBaseFolder())));
  verify(fileSystem);
}
