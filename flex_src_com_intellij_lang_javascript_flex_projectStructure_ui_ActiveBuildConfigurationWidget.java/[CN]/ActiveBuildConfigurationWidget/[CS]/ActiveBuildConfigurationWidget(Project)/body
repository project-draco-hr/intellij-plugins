{
  myProject=project;
  myProject.getMessageBus().connect(myProject).subscribe(ProjectTopics.MODULES,new ModuleAdapter(){
    @Override public void moduleAdded(    final Project project,    final Module module){
      showOrHideWidget(false);
    }
    @Override public void moduleRemoved(    final Project project,    final Module module){
      showOrHideWidget(false);
    }
  }
);
  showOrHideWidget(false);
}
