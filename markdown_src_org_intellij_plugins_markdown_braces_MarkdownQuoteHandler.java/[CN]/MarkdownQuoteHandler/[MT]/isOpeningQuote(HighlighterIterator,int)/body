{
  final IElementType tokenType=iterator.getTokenType();
  if (!QUOTE_TYPES.contains(tokenType)) {
    return false;
  }
  final CharSequence chars=iterator.getDocument().getCharsSequence();
  return (offset <= 0 || Character.isWhitespace(chars.charAt(offset - 1))) && (offset + 1 >= chars.length() || Character.isWhitespace(chars.charAt(offset + 1)));
}
