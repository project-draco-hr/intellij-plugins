{
  int cols=myTextArea.getWidth() / getCharWidth();
  List<String> result=new ArrayList<String>();
  for (  String line : Splitter.on('\n').split(text)) {
    if (line.length() > cols) {
      split(line,cols,result);
    }
 else {
      result.add(line);
    }
  }
  return Joiner.on('\n').join(result);
}
