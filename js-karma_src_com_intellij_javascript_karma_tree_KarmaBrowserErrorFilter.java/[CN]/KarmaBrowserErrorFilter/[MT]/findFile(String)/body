{
  File absFile=new File(path);
  if (absFile.isAbsolute() && absFile.isFile()) {
    return absFile;
  }
  String basePath=myConfig.getBasePath();
  File baseDir=new File(basePath);
  if (baseDir.isDirectory()) {
    File file=new File(baseDir,path);
    if (file.isFile()) {
      return file;
    }
  }
  return null;
}
