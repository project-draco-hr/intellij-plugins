{
  super.setUp();
  ourShouldFail=false;
  Logger.getRootLogger().addAppender(new AppenderSkeleton(){
    protected void append(    LoggingEvent loggingEvent){
      if (loggingEvent.level.isGreaterOrEqual(Priority.ERROR)) {
        ourShouldFail=true;
      }
    }
    public boolean requiresLayout(){
      return false;
    }
    public void close(){
    }
  }
);
}
