{
  VirtualFile file=LocalFileSystem.getInstance().findFileByPath(relativeOrAbsoluteManifestFilePath);
  if (file != null && !file.isDirectory()) {
    return file;
  }
  if (config.USE_CUSTOM_CONFIG_FILE) {
    final VirtualFile customConfigFile=LocalFileSystem.getInstance().findFileByPath(config.CUSTOM_CONFIG_FILE);
    if (customConfigFile != null && !customConfigFile.isDirectory()) {
      file=file != null ? file : VfsUtil.findRelativeFile(relativeOrAbsoluteManifestFilePath,customConfigFile);
      if (file != null && !file.isDirectory())       return file;
    }
  }
  return null;
}
