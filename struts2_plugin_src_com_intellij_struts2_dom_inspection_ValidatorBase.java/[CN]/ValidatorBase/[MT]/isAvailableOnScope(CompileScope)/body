{
  for (  final Module module : scope.getAffectedModules()) {
    final StrutsFacet strutsFacet=StrutsFacet.getInstance(module);
    if (strutsFacet != null) {
      if (isValidationEnabledForModel(strutsFacet.getConfiguration().getFeaturesConfiguration())) {
        return true;
      }
    }
  }
  return false;
}
