{
  if (isConnected()) {
    if (0 == Messages.showYesNoDialog(StringUtil.getMsg("disconnect.from.jabber.account"),StringUtil.getMsg("disconnect.confirmation"),Messages.getQuestionIcon())) {
      myJabberFacade.disconnect();
      myJabberFacade.getMyAccount().setLoginAllowed(false);
      myJabberFacade.saveSettings();
    }
  }
 else {
    myJabberUi.login(myParentComponent);
  }
}
