{
  if (text == null) {
    myLabel.setText("");
    myLabel.setIcon(null);
    setBorder(null);
    myPrefSize=null;
  }
 else {
    myLabel.setText((new StringBuilder()).append("<html><body><font color=red><left>").append(text).append("</left></b></font></body></html>").toString());
    myLabel.setIcon(IconLoader.getIcon("/actions/lightning.png"));
    myLabel.setBorder(new EmptyBorder(2,2,0,0));
    myPrefSize=myLabel.getPreferredSize();
  }
  revalidate();
}
