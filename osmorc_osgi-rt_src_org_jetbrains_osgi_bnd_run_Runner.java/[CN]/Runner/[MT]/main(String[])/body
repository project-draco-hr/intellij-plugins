{
  if (args.length != 1) {
    System.err.println("usage: " + Runner.class.getSimpleName() + " <file.bndrun>");
    System.exit(1);
  }
  File runFile=new File(args[0]);
  if (!runFile.isFile()) {
    System.err.println("invalid run file: " + runFile);
    System.exit(2);
  }
  Workspace.getRun(runFile).runLocal();
}
