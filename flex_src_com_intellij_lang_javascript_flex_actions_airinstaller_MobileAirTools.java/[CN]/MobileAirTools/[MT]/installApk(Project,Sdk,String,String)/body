{
  return uninstallAndroidApplication(project,flexSdk,applicationId) && ExternalTask.runWithProgress(new AdtTask(project,flexSdk){
    protected void appendAdtOptions(    final List<String> command){
      command.add("-installApp");
      command.add("-platform");
      command.add("android");
      command.add("-package");
      command.add(apkPath);
    }
  }
,"Installing " + apkPath.substring(apkPath.lastIndexOf('/') + 1),"Install Android Application");
}
