{
synchronized (myUsersGroupsLock) {
    if (myUsers.contains(user)) {
      return;
    }
  }
  if (user.isSelf() && !Pico.isUnitTest()) {
    return;
  }
  myBroadcaster.doChange(new UserEvent.Added(user),new Runnable(){
    @Override public void run(){
synchronized (myUsersGroupsLock) {
        myUsers.add(user);
        myGroups.add(user.getGroup());
      }
    }
  }
);
}
