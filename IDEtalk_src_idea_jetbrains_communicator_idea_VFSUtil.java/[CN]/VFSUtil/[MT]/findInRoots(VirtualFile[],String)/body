{
  if (relativePath == null)   return null;
  for (  VirtualFile root : roots) {
    String probeName;
    if (isArchive(root)) {
      probeName=root.getPath() + '!' + relativePath;
    }
 else {
      probeName=root.getPath() + relativePath;
    }
    VirtualFile virtualFile=root.getFileSystem().findFileByPath(probeName);
    if (virtualFile != null) {
      return virtualFile;
    }
  }
  return null;
}
