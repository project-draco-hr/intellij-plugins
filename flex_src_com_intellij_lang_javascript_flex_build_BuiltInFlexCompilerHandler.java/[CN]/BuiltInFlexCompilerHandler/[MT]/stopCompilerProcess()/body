{
  final Runnable runnable=new Runnable(){
    public void run(){
      cancelAllCompilations(true);
      closeSocket();
    }
  }
;
  final Application application=ApplicationManager.getApplication();
  if (application.isDispatchThread()) {
    application.executeOnPooledThread(runnable);
  }
 else {
    runnable.run();
  }
}
