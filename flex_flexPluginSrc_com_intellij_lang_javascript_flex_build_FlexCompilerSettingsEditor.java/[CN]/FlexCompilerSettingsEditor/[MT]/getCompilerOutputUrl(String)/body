{
  if (path.length() == 0) {
    return null;
  }
 else {
    String canonicalPath;
    try {
      canonicalPath=FileUtil.resolveShortWindowsName(path);
    }
 catch (    IOException e) {
      canonicalPath=path;
    }
    return VfsUtil.pathToUrl(FileUtil.toSystemIndependentName(canonicalPath));
  }
}
