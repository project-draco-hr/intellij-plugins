{
  update(false,false);
  boolean success;
  try {
    success=tryCapture(e.getProject());
  }
 catch (  Exception ex) {
    LOG.debug(ex);
    success=false;
  }
  if (success) {
    Timer timer=new Timer(5000,new ActionListener(){
      @Override public void actionPerformed(      ActionEvent e){
        if (!myCaptured) {
          update(true,false);
        }
      }
    }
);
    timer.setRepeats(false);
    timer.start();
  }
 else {
    update(true,false);
  }
}
