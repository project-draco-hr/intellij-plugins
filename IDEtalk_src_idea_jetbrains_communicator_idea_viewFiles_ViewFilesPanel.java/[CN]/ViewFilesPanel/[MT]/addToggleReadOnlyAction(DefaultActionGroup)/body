{
  actionGroup.add(new ToggleAction(StringUtil.getMsg("idea.show_read_only.text"),StringUtil.getMsg("idea.show_read_only.description"),IconLoader.getIcon(StringUtil.getMsg("idea.show_read_only.icon"))){
    public boolean isSelected(    AnActionEvent e){
      return myShowReadOnly;
    }
    public void setSelected(    AnActionEvent e,    boolean state){
      showReadOnly(state);
    }
  }
);
}
