{
  actionGroup.add(new ToggleAction(StringUtil.getMsg("idea.show_read_only.text"),StringUtil.getMsg("idea.show_read_only.description"),AllIcons.Ide.Readonly){
    public boolean isSelected(    AnActionEvent e){
      return myShowReadOnly;
    }
    public void setSelected(    AnActionEvent e,    boolean state){
      showReadOnly(state);
    }
  }
);
}
