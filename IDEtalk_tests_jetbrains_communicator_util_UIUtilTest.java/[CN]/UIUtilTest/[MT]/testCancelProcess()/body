{
  Runnable runnable=new Runnable(){
    public void run(){
      myIndicator.setCancelled();
      try {
        Thread.sleep(200);
      }
 catch (      InterruptedException e) {
        e.printStackTrace();
      }
    }
  }
;
  boolean canceled=false;
  try {
    UIUtil.run(myIdeFacade,"test text",runnable);
  }
 catch (  CanceledException e) {
    canceled=true;
  }
  assertTrue(canceled);
}
