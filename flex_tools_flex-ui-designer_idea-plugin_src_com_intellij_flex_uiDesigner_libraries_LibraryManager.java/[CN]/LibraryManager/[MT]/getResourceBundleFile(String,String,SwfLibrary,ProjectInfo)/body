{
  final THashSet<String> bundles=library.resourceBundles.get(locale);
  if (!bundles.contains(bundleName)) {
    return null;
  }
  VirtualFile virtualFile=library.getFile().findChild("locale").findChild(locale).findChild(bundleName + CatalogXmlBuilder.PROPERTIES_EXTENSION);
  return (PropertiesFile)PsiDocumentManager.getInstance(projectInfo.getElement()).getPsiFile(FileDocumentManager.getInstance().getDocument(virtualFile));
}
