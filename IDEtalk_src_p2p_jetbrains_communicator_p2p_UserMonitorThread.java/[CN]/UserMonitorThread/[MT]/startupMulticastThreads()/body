{
  for (  MulticastPingThread multicastThread : myMulticastThreads) {
    multicastThread.start();
  }
  new WaitFor(1 * MSECS_IN_SEC){
    protected boolean condition(){
      for (      MulticastPingThread multicastThread : myMulticastThreads) {
        if (!multicastThread.isStarted())         return false;
      }
      return true;
    }
  }
;
}
