{
  final boolean ok=ExternalTask.runWithProgress(createCertificateTask(project,flexSdk,parameters),"Creating certificate",CreateCertificateDialog.TITLE);
  if (ok) {
    ApplicationManager.getApplication().runWriteAction(new Runnable(){
      public void run(){
        LocalFileSystem.getInstance().refreshAndFindFileByPath(parameters.getKeystoreFilePath());
      }
    }
);
  }
  return ok;
}
