{
  if (myConfigurations.length > 0) {
    myActiveConfiguration=activeName != null ? ContainerUtil.find(myConfigurations,new Condition<FlexIdeBuildConfigurationImpl>(){
      @Override public boolean value(      FlexIdeBuildConfigurationImpl flexIdeBuildConfiguration){
        return flexIdeBuildConfiguration.getName().equals(activeName);
      }
    }
) : null;
    if (myActiveConfiguration == null) {
      myActiveConfiguration=myConfigurations[0];
    }
  }
 else {
    myActiveConfiguration=null;
  }
}
