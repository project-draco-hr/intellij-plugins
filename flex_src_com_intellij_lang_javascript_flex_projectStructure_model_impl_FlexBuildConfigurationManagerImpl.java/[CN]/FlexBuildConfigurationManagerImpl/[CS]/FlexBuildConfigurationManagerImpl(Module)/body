{
  myModule=module;
  if (myModule != null) {
    myModule.getProject().getMessageBus().connect(myModule).subscribe(ProjectTopics.MODULES,new ModuleAdapter(){
      @Override public void beforeModuleRemoved(      Project project,      Module module){
        if (module != myModule) {
          removeDependenciesOn(module);
        }
      }
    }
);
  }
}
