{
  final File sourceFile=new File(sourceFilePath);
  if (sourceFile.exists()) {
    ZipUtil.addFileOrDirRecursively(jaroutputstream,tempFile,sourceFile,destFilePath,fileFilter,null);
  }
 else {
    ApplicationManager.getApplication().invokeLater(new Runnable(){
      public void run(){
        compileContext.addMessage(CompilerMessageCategory.WARNING,String.format("The file \"%s\" does not exist. It will not be copied into the JAR \"%s\"",sourceFile,getJarFileName(module)),null,0,0);
      }
    }
);
  }
}
