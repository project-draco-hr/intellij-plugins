{
  StringBuilder buf=new StringBuilder();
  boolean needsSeparator=false;
  for (  AbstractTestProxy test : failedTests) {
    if (test.isPassed()) {
      continue;
    }
    if (test.isLeaf()) {
      if (needsSeparator) {
        buf.append('|');
      }
 else {
        needsSeparator=true;
      }
      buf.append(StringUtil.escapeToRegexp(test.getName()));
    }
  }
  return buf.toString();
}
