{
  super(ID,OsmorcBundle.message("run.configuration.name"),OsmorcBundle.message("run.configuration.description"),OsmorcBundle.getSmallIcon());
  addFactory(new ConfigurationFactory(this){
    @Override public RunConfiguration createTemplateConfiguration(    Project project){
      return new OsgiRunConfiguration(project,this,"");
    }
    @Override public boolean isApplicable(    @NotNull Project project){
      return ProjectSettings.getInstance(project).getFrameworkInstanceName() != null;
    }
  }
);
}
