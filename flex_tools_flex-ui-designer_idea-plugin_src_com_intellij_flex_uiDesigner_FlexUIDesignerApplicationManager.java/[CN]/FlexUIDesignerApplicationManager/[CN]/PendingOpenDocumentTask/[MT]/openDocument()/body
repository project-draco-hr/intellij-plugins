{
  Client client=Client.getInstance();
  try {
    client.flush();
    client.openDocument(myModule,myPsiFile);
    client.flush();
    ApplicationManager.getApplication().getMessageBus().syncPublisher(MESSAGE_TOPIC).initialDocumentOpened();
  }
 catch (  IOException e) {
    IOUtil.close(server);
    serverClosed();
    LOG.error(e);
  }
 finally {
    documentOpening=false;
  }
}
