{
  myModule=module;
  myPsiFile=psiFile;
  ApplicationManager.getApplication().executeOnPooledThread(new Runnable(){
    @Override public void run(){
      try {
        if (!ServiceManager.getService(StringRegistry.class).isEmpty()) {
          Client.getInstance().initStringRegistry();
        }
        LibraryManager.getInstance().initLibrarySets(myModule,APP_DIR);
      }
 catch (      IOException e) {
        IOUtil.close(server);
        serverClosed();
        LOG.error(e);
      }
catch (      InitException e) {
        LOG.error(e.getCause());
        DocumentProblemManager.getInstance().reportWithTitle(myModule.getProject(),e.getMessage());
      }
      libraryAndModuleInitialized=true;
      if (clientOpened) {
        openDocument();
      }
    }
  }
);
}
