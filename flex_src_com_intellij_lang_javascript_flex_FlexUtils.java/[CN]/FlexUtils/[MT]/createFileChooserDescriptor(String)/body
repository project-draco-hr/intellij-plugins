{
  return allowedExtension == null ? new FileChooserDescriptor(true,false,false,true,false,false) : new FileChooserDescriptor(true,false,false,false,false,false){
    public boolean isFileVisible(    VirtualFile file,    boolean showHiddenFiles){
      return super.isFileVisible(file,showHiddenFiles) && (file.isDirectory() || allowedExtension.equalsIgnoreCase(file.getExtension()));
    }
  }
;
}
