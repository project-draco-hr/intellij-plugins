{
  myDisposable=disposable;
  myInfoPane=createInfoPane();
  myBrowsersLabel=new JLabel();
  JPanel panel=SwingHelper.newHorizontalPanel(Component.CENTER_ALIGNMENT,myInfoPane,Box.createHorizontalGlue(),myBrowsersLabel);
