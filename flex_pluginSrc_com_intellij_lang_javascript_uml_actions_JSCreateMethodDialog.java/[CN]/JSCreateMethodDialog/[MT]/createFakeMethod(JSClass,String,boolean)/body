{
  if (inClass) {
    JSFile file=JSElementFactory.createExpressionCodeFragment(clazz.getProject(),(clazz.isInterface() ? "interface" : "class") + " Dummy {" + text+ "}",clazz,true,JavaScriptSupportLoader.ECMA_SCRIPT_L4,null,JSElementFactory.TopLevelCompletion.NO,null);
    JSClass aClass=PsiTreeUtil.findChildOfType(file,JSClass.class);
    return aClass.getFunctions()[0];
  }
 else {
    JSFile file=JSElementFactory.createExpressionCodeFragment(clazz.getProject(),text,clazz,true,JavaScriptSupportLoader.ECMA_SCRIPT_L4,null,JSElementFactory.TopLevelCompletion.NO,null);
    return PsiTreeUtil.findChildOfType(file,JSFunction.class);
  }
}
