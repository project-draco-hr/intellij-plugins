{
  VirtualFile sdk=LocalFileSystem.getInstance().findFileByPath(sdkPath);
  if (sdk == null)   throw new ExecutionException("No flutter sdk given");
  VirtualFile bin=sdk.findChild("bin");
  if (bin == null)   throw new ExecutionException("No flutter sdk given");
  VirtualFile exec=bin.findChild("flutter");
  if (exec == null)   throw new ExecutionException("No flutter sdk given");
  return exec.getPath();
}
