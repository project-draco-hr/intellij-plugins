{
  MessageBusConnection conn=project.getMessageBus().connect(project);
  conn.subscribe(ProjectTopics.PROJECT_ROOTS,new ModuleRootAdapter(){
    @SuppressWarnings("AssignmentToStaticFieldFromInstanceMethod") @Override public void rootsChanged(    final ModuleRootEvent event){
      JSTD_LIBRARY_MAPPINGS=null;
    }
  }
);
}
