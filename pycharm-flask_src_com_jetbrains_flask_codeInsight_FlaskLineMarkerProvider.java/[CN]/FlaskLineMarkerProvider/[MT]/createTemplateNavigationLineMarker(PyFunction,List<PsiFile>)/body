{
  PsiFile template=templates.iterator().next();
  String templateName=template.getName();
  final String msg=templates.size() == 1 ? "Go to template '" + templateName + "'" : "Goto templates";
  return new RelatedItemLineMarkerInfo<PyFunction>(function,function.getTextRange(),AllIcons.FileTypes.Html,Pass.UPDATE_OVERRIDEN_MARKERS,new ConstantFunction<PyFunction,String>(msg),new DefaultGutterIconNavigationHandler<PyFunction>(templates,msg),GutterIconRenderer.Alignment.RIGHT,GotoRelatedItem.createItems(templates,"Templates"));
}
