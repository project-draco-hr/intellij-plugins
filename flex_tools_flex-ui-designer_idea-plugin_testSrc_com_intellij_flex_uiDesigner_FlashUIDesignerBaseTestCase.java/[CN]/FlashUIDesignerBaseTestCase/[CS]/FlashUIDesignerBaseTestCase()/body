{
  indexableFileSet=new IndexableFileSet(){
    @Override public boolean isInSet(    final VirtualFile file){
      return file.getFileSystem() == sourceDir.getFileSystem();
    }
    @Override public void iterateIndexableFilesIn(    final VirtualFile file,    final ContentIterator iterator){
      if (file.isDirectory()) {
        for (        VirtualFile child : file.getChildren()) {
          iterateIndexableFilesIn(child,iterator);
        }
      }
 else {
        iterator.processFile(file);
      }
    }
  }
;
}
