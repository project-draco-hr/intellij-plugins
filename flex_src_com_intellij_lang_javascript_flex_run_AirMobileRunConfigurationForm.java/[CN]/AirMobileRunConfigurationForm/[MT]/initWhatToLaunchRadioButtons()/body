{
  final ActionListener actionListener=new ActionListener(){
    public void actionPerformed(    final ActionEvent e){
      updateControls();
      final Component toFocus=myAirDescriptorRadioButton.isSelected() ? myApplicationDescriptorComponent.getComponent().getComboBox() : myMainClassComponent.getComponent().getChildComponent();
      IdeFocusManager.getInstance(myProject).requestFocus(toFocus,true);
    }
  }
;
  myAirDescriptorRadioButton.addActionListener(actionListener);
  myMainClassRadioButton.addActionListener(actionListener);
}
