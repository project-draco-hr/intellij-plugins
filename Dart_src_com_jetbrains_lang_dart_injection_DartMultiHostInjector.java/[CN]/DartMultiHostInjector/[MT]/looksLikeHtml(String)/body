{
  final int tagStart=text.indexOf('<');
  final int length=text.length();
  return tagStart >= 0 && (tagStart < length - 1 && (Character.isLetter(text.charAt(tagStart + 1))) || (tagStart < length - 2 && text.charAt(tagStart + 1) == '/' && Character.isLetter(text.charAt(tagStart + 2))) || (tagStart < length - 3 && text.charAt(tagStart + 1) == '!' && text.charAt(tagStart + 2) == '-') && text.charAt(tagStart + 3) == '-') && text.indexOf('>',tagStart) > 0;
}
