{
  Platform.runLater(new Runnable(){
    @Override public void run(){
      getWebViewGuaranteed().getEngine().executeScript("if ('__IntelliJTools' in window) " + "__IntelliJTools.scrollToOffset(" + offset + ", '"+ HtmlGenerator.Companion.getSRC_ATTRIBUTE_NAME()+ "');");
      final Object result=getWebViewGuaranteed().getEngine().executeScript("document.documentElement.scrollTop || document.body.scrollTop");
      if (result instanceof Number) {
        myScrollPreservingListener.myScrollY=((Number)result).intValue();
      }
    }
  }
);
}
