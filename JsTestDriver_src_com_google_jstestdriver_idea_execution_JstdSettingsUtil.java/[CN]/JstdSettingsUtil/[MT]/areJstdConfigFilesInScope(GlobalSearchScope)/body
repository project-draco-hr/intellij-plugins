{
  final Ref<Boolean> jstdConfigFound=Ref.create(false);
  FileBasedIndex.getInstance().processValues(FileTypeIndex.NAME,JstdConfigFileType.INSTANCE,null,new FileBasedIndex.ValueProcessor<Void>(){
    @Override public boolean process(    final VirtualFile file,    final Void value){
      jstdConfigFound.set(true);
      return false;
    }
  }
,scope);
  return jstdConfigFound.get();
}
