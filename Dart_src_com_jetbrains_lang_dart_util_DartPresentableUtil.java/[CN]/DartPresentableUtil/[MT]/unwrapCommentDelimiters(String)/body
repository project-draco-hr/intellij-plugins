{
  if (text.startsWith("/**"))   text=text.substring("/**".length());
  if (text.startsWith("/*"))   text=text.substring("/*".length());
  if (text.startsWith("///"))   text=text.substring("///".length());
  if (text.startsWith("//"))   text=text.substring("//".length());
  if (text.endsWith("**/"))   text=text.substring(0,text.length() - "**/".length());
  if (text.endsWith("*/"))   text=text.substring(0,text.length() - "*/".length());
  return text;
}
