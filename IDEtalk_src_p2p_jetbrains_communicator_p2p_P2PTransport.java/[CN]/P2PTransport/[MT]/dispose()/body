{
  try {
    myEventBroadcaster.removeListener(myUserAddedCallbackListener);
    myUserMonitorThread.shutdown();
  }
 catch (  Throwable e) {
    LOG.info(e);
  }
  final P2PServer p2PServer=myP2PServer;
  if (p2PServer != null) {
    try {
      p2PServer.shutdown();
    }
 catch (    Throwable e) {
      LOG.info(e);
    }
  }
  myOnlineUsers.clear();
}
