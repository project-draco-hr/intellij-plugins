{
  mySwingAlarm.addRequest(new Runnable(){
    @Override public void run(){
      getPanelGuaranteed().setCSS(cssSettings.isTextEnabled() ? cssSettings.getStylesheetText() : null,cssSettings.isUriEnabled() ? cssSettings.getStylesheetUri() : null);
      getPanelGuaranteed().render();
    }
  }
,RENDERING_DELAY_MS,ModalityState.stateForComponent(getComponent()));
}
