{
  final AirInstallerParameters parameters=getAirInstallerParameters();
  saveAsDefaultParameters(parameters);
  FileDocumentManager.getInstance().saveAllDocuments();
  final boolean ok=ExternalTask.runWithProgress(createAirInstallerTask(myProject,parameters),"Packaging AIR installer",TITLE);
  if (ok) {
    final String message=parameters.DO_NOT_SIGN ? MessageFormat.format("Unsigned AIR package created: {0}",parameters.INSTALLER_FILE_NAME) : MessageFormat.format("AIR installation file created: {0}",parameters.INSTALLER_FILE_NAME);
  }
  return ok;
}
