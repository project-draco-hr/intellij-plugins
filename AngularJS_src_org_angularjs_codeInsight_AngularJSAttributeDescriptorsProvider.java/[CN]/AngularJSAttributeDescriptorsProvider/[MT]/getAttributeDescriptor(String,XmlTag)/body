{
  final String attributeName=normalizeAttributeName(attrName);
  if (xmlTag != null) {
    final Project project=xmlTag.getProject();
    if (FileBasedIndex.getInstance().getAllKeys(AngularDirectivesIndex.INDEX_ID,project).contains(attributeName) || ATTRIBUTE_BY_NAME.containsKey(attributeName)) {
      return createDescriptor(project,attributeName);
    }
  }
  return ATTRIBUTE_BY_NAME.get(attributeName);
}
