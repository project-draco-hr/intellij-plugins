{
  mySet=fileSet;
  final PresentationData presentationData=getPresentation();
  final String name=mySet.getName();
  if (fileSet.getFiles().isEmpty()) {
    presentationData.addText(new ColoredFragment(name,StrutsBundle.message("facet.fileset.nofiles.attached"),getErrorAttributes()));
  }
 else {
    presentationData.addText(new ColoredFragment(name,getPlainAttributes()));
  }
  if (fileSet.isAutodetected()) {
    presentationData.addText(new ColoredFragment(StrutsBundle.message("facet.fileset.autodetected"),SimpleTextAttributes.GRAY_ITALIC_ATTRIBUTES));
  }
}
