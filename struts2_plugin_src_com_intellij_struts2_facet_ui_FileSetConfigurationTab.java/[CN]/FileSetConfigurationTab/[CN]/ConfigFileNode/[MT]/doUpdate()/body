{
  final VirtualFile file=myFilePointer.getFile();
  if (file != null) {
    renderFile(file,SimpleTextAttributes.REGULAR_ATTRIBUTES,SimpleTextAttributes.GRAYED_ATTRIBUTES,null);
  }
 else {
    renderFile(file,SimpleTextAttributes.ERROR_ATTRIBUTES,SimpleTextAttributes.ERROR_ATTRIBUTES,StrutsBundle.message("facet.fileset.filenotfound"));
  }
}
