{
  int end=start;
  byte[] array=byteBuffer.array();
  int lastSlashPosition=-1;
  byte c;
  int index=0;
  while ((c=array[end++]) != 0) {
switch (c) {
case '/':
      lastSlashPosition=index;
    abcNameBuffer[index]='.';
  break;
default :
abcNameBuffer[index]=(char)c;
}
index++;
}
if (lastSlashPosition != -1) {
abcNameBuffer[lastSlashPosition]=':';
}
return new String(abcNameBuffer,0,index);
}
