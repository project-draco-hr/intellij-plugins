{
  Thread t=new Thread(new Runnable(){
    public void run(){
      final Obr selectedObr=(Obr)_obrBox.getSelectedItem();
      if (selectedObr != null) {
        start();
switch (_queryType) {
case Maven:
          List result=null;
        try {
          result=Arrays.asList(selectedObr.queryForMavenArtifact(_queryString.getText(),ObrSearchPanel.this));
          setResults(result);
        }
 catch (        final IOException e1) {
          SwingUtilities.invokeLater(new Runnable(){
            public void run(){
              int dialogResult=Messages.showDialog(_rootPanel,"Could not connect to " + selectedObr.getDisplayName() + ".\n"+ e1.getMessage()+ ".","Connection error",new String[]{"Retry","Cancel","Proxy Settings"},0,null);
switch (dialogResult) {
case 2:
                HttpConfigurable.editConfigurable(_rootPanel);
case 0:
              search();
            break;
default :
          break;
      }
    }
  }
);
}
}
stop();
}
}
}
,"Obr search");
t.start();
}
