{
  myContext=context;
  OsmorcFacet facet=OsmorcFacet.getInstance(module);
  if (facet != null) {
    OsmorcFacetConfiguration configuration=facet.getConfiguration();
    if (configuration.isManifestManuallyEdited()) {
      BundleManifest bundleManifest=BundleManager.getInstance(module.getProject()).getManifestByObject(module);
      if (bundleManifest != null) {
        PsiFile manifestFile=bundleManifest.getManifestFile();
        VirtualFile virtualFile=manifestFile.getVirtualFile();
        if (virtualFile != null) {
          sourceFileName=VfsUtilCore.pathToUrl(virtualFile.getPath());
        }
      }
    }
 else {
      String mavenProjectPath=MavenIntegrationUtil.getMavenProjectPath(module);
      if (mavenProjectPath != null) {
        sourceFileName=mavenProjectPath;
      }
    }
  }
  mySourceFileName=sourceFileName;
  myMessagePrefix="[" + module.getName() + "] ";
}
