{
  final JSImplicitElement directive=AngularIndexUtil.resolve(project,AngularDirectivesDocIndex.KEY,directiveName);
  if (directive != null) {
    final PsiComment comment=PsiTreeUtil.getParentOfType(directive,PsiComment.class);
    if (comment != null) {
      return comment;
    }
  }
  return directive;
}
