{
  if (buf.length() > 0) {
    buf.append(",");
  }
  if (asJstdScope) {
    buf.append('^');
  }
  buf.append(testCaseName);
  if (asJstdScope) {
    buf.append("#");
  }
  if (testMethodName != null) {
    if (!asJstdScope) {
      buf.append(".");
    }
    buf.append(testMethodName);
    if (asJstdScope) {
      buf.append('$');
    }
  }
}
