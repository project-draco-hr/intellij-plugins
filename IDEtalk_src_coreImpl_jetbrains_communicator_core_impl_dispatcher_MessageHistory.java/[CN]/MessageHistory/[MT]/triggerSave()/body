{
  if (mySaveTimer == null) {
    mySaveTimer=new Timer("Save IDEtalk History",false);
    mySaveTimer.schedule(new TimerTask(){
      public void run(){
        try {
          saveHistory();
        }
  finally {
          mySaveTimer.cancel();
          mySaveTimer=null;
        }
      }
    }
,SAVE_TIMEOUT);
  }
}
