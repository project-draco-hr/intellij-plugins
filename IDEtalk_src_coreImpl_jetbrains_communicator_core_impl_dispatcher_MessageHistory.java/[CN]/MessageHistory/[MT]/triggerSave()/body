{
  if (myPendingSave == null) {
    myPendingSave=myFacade.runOnPooledThread(new Runnable(){
      public void run(){
        try {
          Thread.sleep(SAVE_TIMEOUT);
        }
 catch (        InterruptedException e) {
        }
 finally {
          saveHistory();
          myPendingSave=null;
        }
      }
    }
);
  }
}
