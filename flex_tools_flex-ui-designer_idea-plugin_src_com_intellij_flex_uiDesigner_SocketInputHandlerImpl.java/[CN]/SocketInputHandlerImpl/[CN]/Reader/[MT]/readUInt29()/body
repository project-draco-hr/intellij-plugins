{
  int value;
  int b=readByte() & 0xFF;
  if (b < 128) {
    return b;
  }
  value=(b & 0x7F) << 7;
  b=readByte() & 0xFF;
  if (b < 128) {
    return (value | b);
  }
  value=(value | (b & 0x7F)) << 7;
  b=readByte() & 0xFF;
  if (b < 128) {
    return (value | b);
  }
  value=(value | (b & 0x7F)) << 8;
  b=readByte() & 0xFF;
  return (value | b);
}
