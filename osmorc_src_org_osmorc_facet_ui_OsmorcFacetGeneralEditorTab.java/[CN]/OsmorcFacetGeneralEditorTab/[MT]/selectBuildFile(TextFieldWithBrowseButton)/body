{
  VirtualFile[] roots=getContentRoots(_module);
  VirtualFile currentFile=findFileInContentRoots(field.getText(),_module);
  VirtualFile fileLocation=FileChooser.chooseFile(_editorContext.getProject(),FileChooserDescriptorFactory.createSingleFileNoJarsDescriptor(),currentFile);
  if (fileLocation != null) {
    for (    VirtualFile root : roots) {
      String relativePath=VfsUtilCore.getRelativePath(fileLocation,root,File.separatorChar);
      if (relativePath != null) {
        field.setText(relativePath);
        break;
      }
    }
  }
  updateGui();
}
