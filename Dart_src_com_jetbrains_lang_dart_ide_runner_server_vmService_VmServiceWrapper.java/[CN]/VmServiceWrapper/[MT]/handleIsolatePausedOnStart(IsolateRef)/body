{
  if (myIsolatesInfo.addIsolate(isolateRef)) {
    addRequest(new Runnable(){
      @Override public void run(){
        myVmService.setExceptionPauseMode(isolateRef.getId(),ExceptionPauseMode.Unhandled,new VmServiceConsumers.SuccessConsumerWrapper(){
          @Override public void received(          Success response){
            setInitialBreakpointsAndResume(isolateRef.getId());
          }
        }
);
      }
    }
);
  }
}
