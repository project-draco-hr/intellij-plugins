{
  List<String> paths=ContainerUtil.newArrayList();
  if (project == null)   return paths;
  VirtualFile baseDir=project.getBaseDir();
  if (baseDir.findChild(FOLDER_PLATFORMS) != null || baseDir.findChild(FOLDER_WWW) != null || baseDir.findChild(FOLDER_CORDOVA) != null) {
    ContainerUtil.addIfNotNull(paths,project.getBasePath());
  }
 else {
    Collection<VirtualFile> results=FilenameIndex.getVirtualFilesByName(project,"platforms",GlobalSearchScope.projectScope(project));
    if (results.isEmpty()) {
      results=FilenameIndex.getVirtualFilesByName(project,"www",GlobalSearchScope.projectScope(project));
    }
    addPaths(paths,results);
  }
  return paths;
}
