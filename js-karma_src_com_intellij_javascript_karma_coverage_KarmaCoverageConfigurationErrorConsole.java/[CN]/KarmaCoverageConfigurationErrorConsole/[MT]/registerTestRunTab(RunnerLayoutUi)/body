{
  ui.getOptions().setMinimizeActionEnabled(false);
  Content consoleContent=ui.createContent(ExecutionConsole.CONSOLE_CONTENT_ID,getComponent(),myStatus != null ? "Coverage Configuration Error" : "Test Run",AllIcons.Debugger.Console,getPreferredFocusableComponent());
  ui.addContent(consoleContent,1,PlaceInGrid.bottom,false);
  consoleContent.setCloseable(false);
  ui.selectAndFocus(consoleContent,false,false);
}
