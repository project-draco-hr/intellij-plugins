{
  if (myComponent == null) {
    JTextPane textPane=createTextPane();
    textPane.setBorder(BorderFactory.createEmptyBorder(10,10,10,10));
    myComponent=ScrollPaneFactory.createScrollPane(textPane,ScrollPaneConstants.VERTICAL_SCROLLBAR_AS_NEEDED,ScrollPaneConstants.HORIZONTAL_SCROLLBAR_AS_NEEDED);
  }
  return myComponent;
}
