{
  LOG.assertTrue(application != null);
  final DesignerApplication disposedApp=application;
  application=null;
  AppUIUtil.invokeOnEdt(new Runnable(){
    @Override public void run(){
      try {
        Disposer.dispose(disposedApp);
      }
  finally {
        serviceManager.disposeComponent();
        serviceManager=null;
      }
    }
  }
);
}
